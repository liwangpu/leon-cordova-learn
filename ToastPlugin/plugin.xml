<?xml version='1.0' encoding='utf-8'?>
<plugin id="cxist.xcloud.toast" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>ToastPlugin</name>
    <js-module name="ToastPlugin" src="www/ToastPlugin.js">
        <clobbers target="cordova.plugins.ToastPlugin" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="ToastPlugin">
                <param name="android-package" value="cxist.xcloud.toast.ToastPlugin" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/ToastPlugin.java" target-dir="src/cxist/xcloud/toast/ToastPlugin" />
    </platform>
</plugin>