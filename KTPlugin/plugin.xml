<?xml version='1.0' encoding='utf-8'?>
<plugin id="xcloud.cxist.kttoast" version="0.0.1" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>KTPlugin</name>
    <js-module name="KTPlugin" src="www/KTPlugin.js">
        <clobbers target="cordova.plugins.KTPlugin" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="KTPlugin">
                <param name="android-package" value="xcloud.cxist.kttoast.KTPlugin" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/KTPlugin.kt" target-dir="app/src/main/kotlin/ktplugin" />
    </platform>
</plugin>